package components

templ Collapsible(id string, title string, open bool) {
	if open {
		<details id={ id } data-persist={ id } open>
			<summary>{ title }</summary>
			{ children... }
		</details>
	} else {
		<details id={ id } data-persist={ id }>
			<summary>{ title }</summary>
			{ children... }
		</details>
	}
}
